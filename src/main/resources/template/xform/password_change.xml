<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare>
		<column name="userId" mode="string" display="none"/>
		<column name="userName"     caption="用户名" mode="string" editable="false"/>
		<column name="password"     caption="输入旧密码" mode="string"/>
		<column name="newPassword"  caption="输入新密码" mode="string"/>
		<column name="newPassword2" caption="新密码确认" mode="string"/>
	</declare>
	<layout>
		<TR>
			<TD width="80"><label binding="userName"/></TD>
			<TD><input binding="userName" style="width:150px"/></TD>
		</TR>
		<TR>
			<TD><label binding="password"/></TD>
			<TD><input binding="password" type="password" style="width:220px"/></TD>
		</TR>
		<TR>
			<TD><label binding="newPassword"/></TD>
			<TD><input binding="newPassword" type="password" style="width:220px"/></TD>
		</TR>
		<TR>
			<TD><label binding="newPassword2"/></TD>
			<TD><input binding="newPassword2" type="password" style="width:220px"/></TD>
		</TR>
	</layout>
	<data></data>
</xform>