<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare>	
		<column name="id" mode="string" display="none"/>
		<column name="name" caption="参数名称" mode="string" maxLength="100" empty="false"/>
		<column name="code" caption="参数Code" mode="string" maxLength="100" empty="false"/>
		<column name="value" caption="参数值" mode="string" maxLength="2000" empty="false"/>
		<column name="description" caption="描述" mode="string" maxLength="500"/>
	</declare>
	<layout>
		<TR>
			<TD width="100"><label binding="name"/></TD>
			<TD><input binding="name" style="width:50%;"/></TD>
		</TR>
		<TR>
			<TD><label binding="code"/></TD>
			<TD><input binding="code" style="width:50%;"/></TD>
		</TR>
		<TR>
			<TD valign="top"><label binding="value"/></TD>
			<TD><textarea binding="value" style="width:100%;height:300px"/></TD>
		</TR>
		<TR>
			<TD valign="top"><label binding="description"/></TD>
			<TD><textarea binding="description" style="width:100%;height:50px"/></TD>
		</TR>
	</layout>
	<data>
	</data>
</xform>