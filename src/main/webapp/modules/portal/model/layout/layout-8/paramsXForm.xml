<?xml version="1.0" encoding="UTF-8"?>

<Response> 
  <ConfigParams> 
    <xform> 
      <declare> 
        <column name="tableWidth" caption="表格宽度" mode="string"/>  
        <column name="column1Width" caption="第一列宽度" mode="string"/>  
        <column name="column2Width" caption="第二列宽度" mode="string"/> 
      </declare>  
      <layout> 
        <TR> 
          <TD width="100">
            <label binding="tableWidth"/>
          </TD>  
          <TD>
            <input binding="tableWidth" type="text"/>
          </TD> 
        </TR>  
        <TR> 
          <TD>
            <label binding="column1Width"/>
          </TD>  
          <TD>
            <input binding="column1Width" type="text"/>
          </TD> 
        </TR>  
        <TR> 
          <TD>
            <label binding="column2Width"/>
          </TD>  
          <TD>
            <input binding="column2Width" type="text"/>
          </TD> 
        </TR> 
      </layout>  
      <data/> 
    </xform> 
  </ConfigParams> 
</Response>
